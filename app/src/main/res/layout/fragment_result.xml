<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:padding="10dp"
    tools:context=".activityResult.ActivityResultA">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etInputToPassFromFragment"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etInputToPassFromFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Input From Fragment"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStartActivityResultFromFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#d3d3d3"
        android:gravity="center"
        android:text="Start Activity For Result"
        app:layout_constraintTop_toBottomOf="@+id/etInputToPassFromFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>